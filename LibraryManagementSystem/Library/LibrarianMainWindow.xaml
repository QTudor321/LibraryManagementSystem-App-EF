<Window x:Class="LibraryManagementSystem.Library.LibrarianMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem.Library"
        mc:Ignorable="d"
        Title="LibrarianMainWindow" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="410" Margin="10,10,0,0" VerticalAlignment="Top" Width="775" Source="/Images/CreamBackground.png" Stretch="Fill"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="65,61,0,0" VerticalAlignment="Top" Width="100" Source="/Images/LibrarianIcon.png"/>
        <Label Content="Welcome Librarian! This is the administration window.&#xD;&#xA;Select a utility to handle administration of the library!&#xD;&#xA;This window is only seen by librarians.&#xD;&#xA;" HorizontalAlignment="Left" Margin="232,61,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Content="" HorizontalAlignment="Left" Margin="125,217,0,0" VerticalAlignment="Top" Height="63" Width="68" Click="Button_Click_1">
            <Button.Background>
                <ImageBrush ImageSource="/Images/LibrarianUserIcon.png"></ImageBrush>
            </Button.Background>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Margin="358,217,0,0" VerticalAlignment="Top" Height="63" Width="65" Click="Button_Click_2">
            <Button.Background>
                <ImageBrush ImageSource="/Images/LibrarianBookIcon.png"></ImageBrush>
            </Button.Background>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Margin="582,217,0,0" VerticalAlignment="Top" Height="63" Width="66" Click="Button_Click_3">
            <Button.Background>
                <ImageBrush ImageSource="/Images/LibrarianLoanIcon.png"></ImageBrush>
            </Button.Background>
        </Button>
        <Label Content="User Management" HorizontalAlignment="Left" Margin="125,186,0,0" VerticalAlignment="Top" FontSize="15"/>
        <Label Content="Book Management" HorizontalAlignment="Left" Margin="358,191,0,0" VerticalAlignment="Top" FontSize="15"/>
        <Label Content="Loan Management" HorizontalAlignment="Left" Margin="582,189,0,0" VerticalAlignment="Top" FontSize="15"/>
        <Button Content="" HorizontalAlignment="Left" Margin="38,347,0,0" VerticalAlignment="Top" Height="53" Width="58" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Images/LogOut.png"></ImageBrush>
            </Button.Background>
        </Button>
        <Label Content="Log Out" HorizontalAlignment="Left" Margin="38,321,0,0" VerticalAlignment="Top" FontSize="15"/>

    </Grid>
</Window>
