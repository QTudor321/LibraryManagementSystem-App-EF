<Window x:Class="LibraryManagementSystem.Library.ManageBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem.Library"
        mc:Ignorable="d"
        Title="ManageBooks" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="409" Margin="10,10,0,0" VerticalAlignment="Top" Width="771" Source="/Images/LibraryImage.png" Stretch="Fill"/>

        <Grid x:Name="GridAddBook" Margin="68,106,587,167" Visibility="Collapsed">
            <TextBox x:Name="TxtBookTitleAdd" HorizontalAlignment="Left" Margin="0,18,0,0" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="TxtBookThemeAdd" HorizontalAlignment="Left" Margin="0,36,0,0" TextWrapping="Wrap" Text="Theme" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="TxtBookAuthorAdd" HorizontalAlignment="Left" Margin="0,54,0,0" TextWrapping="Wrap" Text="Author" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="TxtBookIdentifierAdd" HorizontalAlignment="Left" Margin="0,72,0,0" TextWrapping="Wrap" Text="Identifier" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="TxtBookCopiesAdd" HorizontalAlignment="Left" Margin="0,90,0,0" TextWrapping="Wrap" Text="Copies" VerticalAlignment="Top" Width="120"/>
            <Button Content="Add" HorizontalAlignment="Left" Margin="94,131,0,0" VerticalAlignment="Top" Click="Button_Click_4"/>
            <TextBox x:Name="TxtBookPriceAdd" HorizontalAlignment="Left" Margin="0,108,0,0" TextWrapping="Wrap" Text="Price" VerticalAlignment="Top" Width="120"/>

        </Grid>
        <Button Content="Add Book" HorizontalAlignment="Left" Margin="68,81,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Grid x:Name="GridUpdatePrice" Margin="270,131,400,235" Visibility="Collapsed">
            <TextBox x:Name="TxtBookIDUpdatePrice" HorizontalAlignment="Left" TextWrapping="Wrap" Text="bookID" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="TxtPriceUpdatePrice" HorizontalAlignment="Left" Margin="0,18,0,0" TextWrapping="Wrap" Text="Price" VerticalAlignment="Top" Width="120"/>
            <Button Content="Update" HorizontalAlignment="Left" Margin="80,41,0,7" Click="Button_Click_5"/>

        </Grid>
        <Button Content="Update Price" HorizontalAlignment="Left" Margin="270,81,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Grid x:Name="GridDeleteBook" Margin="450,131,230,217" Visibility="Collapsed">
            <TextBox x:Name="TxtBookIDDelete" HorizontalAlignment="Center" TextWrapping="Wrap" Text="bookID" VerticalAlignment="Top" Width="120"/>
            <Button Content="Delete" HorizontalAlignment="Left" Margin="60,43,0,23" Click="Button_Click_6"/>
        </Grid>
        <Button Content="Delete Book" HorizontalAlignment="Left" Margin="450,81,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>
        <Grid x:Name="GridUpdateCopy" Margin="632,131,30,220" Visibility="Collapsed">
            <TextBox x:Name="TxtBookIDUpdateCopy" HorizontalAlignment="Center" TextWrapping="Wrap" Text="bookID" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="TxtCopiesUpdateCopy" HorizontalAlignment="Center" Margin="0,18,0,0" TextWrapping="Wrap" Text="Copies" VerticalAlignment="Top" Width="120"/>
            <Button Content="Update" HorizontalAlignment="Left" Margin="69,53,0,0" VerticalAlignment="Top" Click="Button_Click_7"/>

        </Grid>
        <Button Content="Update Copies" HorizontalAlignment="Left" Margin="632,81,0,0" VerticalAlignment="Top" Click="Button_Click_3"/>
        <Button Content="Menu" HorizontalAlignment="Left" Margin="667,373,0,0" VerticalAlignment="Top" Click="Button_Click_8"/>

    </Grid>
</Window>
