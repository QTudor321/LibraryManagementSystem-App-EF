        <TextBox x:Name="TxtFirstName" HorizontalAlignment="Left" Margin="145,239,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtAddress" HorizontalAlignment="Left" Margin="145,270,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtSubscribed" HorizontalAlignment="Left" Margin="145,301,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
