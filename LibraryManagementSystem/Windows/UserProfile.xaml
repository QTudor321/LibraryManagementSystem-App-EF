<Window x:Class="LibraryManagementSystem.Windows.UserProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem.Windows"
        mc:Ignorable="d"
        Title="UserProfile" Height="450" Width="746">
    <Grid>
        <Image HorizontalAlignment="Left" Height="408" Margin="10,10,0,0" VerticalAlignment="Top" Width="735" Source="/Images/UserProfileBackgroundWhite.png"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="36,31,0,0" VerticalAlignment="Top" Width="100" Source="/Images/UserProfileWindowIcon.png"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="48,169,0,0" VerticalAlignment="Top"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="48,0,0,0" VerticalAlignment="Center"/>
        <Label Content="FirstName" HorizontalAlignment="Left" Margin="48,235,0,0" VerticalAlignment="Top"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="48,266,0,0" VerticalAlignment="Top"/>
        <Label Content="Subscribed" HorizontalAlignment="Left" Margin="48,297,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtUsername" HorizontalAlignment="Left" Margin="145,173,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
