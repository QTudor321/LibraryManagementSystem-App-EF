<Window x:Class="LibraryManagementSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="Library Login" Height="450" Width="771">
    <Grid>
        <Image HorizontalAlignment="Left" Height="429" VerticalAlignment="Top" Source="/Images/LoginBackground.png" Width="797"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="90,353,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>
        <Button Content="Register" HorizontalAlignment="Left" Margin="154,353,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Image HorizontalAlignment="Left" Height="210" Margin="70,33,0,0" VerticalAlignment="Top" Width="267" Source="/Images/BookLogin.png"/>
        <Image HorizontalAlignment="Left" Height="239" Margin="360,33,0,0" VerticalAlignment="Top" Width="409" Source="/Images/LoginText.png"/>
        <Button Content="Subscribe" HorizontalAlignment="Left" Margin="660,353,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <PasswordBox x:Name="TxtPassword" HorizontalAlignment="Left" Margin="70,309,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtUsername" HorizontalAlignment="Left" Margin="70,270,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
