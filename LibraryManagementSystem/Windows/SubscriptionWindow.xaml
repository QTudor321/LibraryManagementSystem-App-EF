<Window x:Class="LibraryManagementSystem.Windows.SubscriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem.Windows"
        mc:Ignorable="d"
        Title="SubscriptionWindow" Height="450" Width="713">
    <Grid Margin="0,0,10,0">
        <Image HorizontalAlignment="Left" Height="409" Margin="19,10,0,0" VerticalAlignment="Top" Width="693" Source="/Images/SubscriptionWindow.png"/>
        <TextBox x:Name="TxtCardNumber" HorizontalAlignment="Left" Margin="114,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtExpiration" HorizontalAlignment="Left" Margin="114,197,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="53"/>
        <TextBox x:Name="TxtCVV" HorizontalAlignment="Left" Margin="184,197,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="50"/>
        <Label Content="Card Number" HorizontalAlignment="Left" Margin="32,140,0,0" VerticalAlignment="Top"/>
        <Label Content="Expiration Date" HorizontalAlignment="Left" Margin="23,193,0,0" VerticalAlignment="Top"/>
        <Label Content="CVV" HorizontalAlignment="Left" Margin="262,193,0,0" VerticalAlignment="Top"/>
        <Label Content="This is the subscription window, here you can &#xD;&#xA;place your payment information down below in &#xD;&#xA;order to experience every utility this system has &#xD;&#xA;to offer for its users!" HorizontalAlignment="Left" Margin="52,16,0,0" VerticalAlignment="Top" Height="119" Width="458" FontSize="20"/>
        <Button Content="Pay" HorizontalAlignment="Left" Margin="114,265,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Image HorizontalAlignment="Left" Height="99" Margin="453,140,0,0" VerticalAlignment="Top" Width="132" Source="/Images/CardIcon.png"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="52,368,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
