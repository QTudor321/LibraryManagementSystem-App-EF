            </Grid>
        </ScrollViewer>
        <Label Content="List of new released Books" Background="Black" Foreground="White" HorizontalAlignment="Left" Margin="180,20,0,0" VerticalAlignment="Top" Width="253" FontSize="20"/>
    </Grid>
</Window>
