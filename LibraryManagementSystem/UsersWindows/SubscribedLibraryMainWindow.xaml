<Window x:Class="LibraryManagementSystem.UsersWindows.SubscribedLibraryMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem.UsersWindows"
        mc:Ignorable="d"
        Title="SubscribedLibraryMainWindow" Height="450" Width="800">
    <Grid>
        <Image Height="{Binding SystemParameters.PrimaryScreenHeight}"  Width="{Binding SystemParameters.PrimaryScreenWidth}"  Stretch="Fill" StretchDirection="Both" Source="/Images/LibraryImage.png" Margin="61,0,0,0"/>
        <DockPanel LastChildFill="False" Margin="0,0,739,0">
            <Border DockPanel.Dock="Left" BorderBrush="Black" BorderThickness="3" Width="63" Height="431">
                <Button Margin="6,226,0,151" HorizontalAlignment="Left" Width="44" Click="Button_Click_2">
                    <Button.Background>
                        <ImageBrush ImageSource="/Images/LoanUtilityIcon.png"></ImageBrush>
                    </Button.Background>
                </Button>
            </Border>

        </DockPanel>
        <Button HorizontalAlignment="Left" Height="49" Margin="10,54,0,0" VerticalAlignment="Top" Width="46" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Images/BookSearchIcon.png"></ImageBrush>
            </Button.Background>
        </Button>

        <Button HorizontalAlignment="Left" Height="49" Margin="10,148,0,0" VerticalAlignment="Top" Width="42" Click="Button_Click_1">
            <Button.Background>
                <ImageBrush ImageSource="/Images/UserProfileIcon.png"></ImageBrush>
