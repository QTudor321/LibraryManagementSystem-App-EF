                    </Grid.Background>

                </Grid>
                <Grid Grid.Row="2" Grid.Column="4" Margin="10">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Images/BookGothicTales.png" Stretch="Fill"/>
                    </Grid.Background>

                </Grid>
                <Grid Grid.Row="3" Grid.Column="1" Margin="10">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Images/BookCatchingFire.png" Stretch="Fill"/>
                    </Grid.Background>

                </Grid>
                <Grid Grid.Row="3" Grid.Column="2" Margin="10">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Images/BookOneWrongStep.png" Stretch="Fill"/>
                    </Grid.Background>

                </Grid>
                <Grid Grid.Row="3" Grid.Column="3" Margin="10">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Images/BookSplinterEffect.png" Stretch="Fill"/>
                    </Grid.Background>

                </Grid>
                <Grid Grid.Row="3" Grid.Column="4" Margin="10">
                    <Grid.Background>
