        <Label Content="Log Out" HorizontalAlignment="Left" Margin="0,348,0,0" VerticalAlignment="Top" Width="61"/>
        <ScrollViewer Margin="66,33,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="105"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="1" Grid.Column="1" Margin="10">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Images/BookTheDreamHotel.png" Stretch="Fill"/>
