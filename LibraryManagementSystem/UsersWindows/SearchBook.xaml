<Window x:Class="LibraryManagementSystem.UsersWindows.SearchBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem.UsersWindows"
        mc:Ignorable="d"
        Title="SearchBook" Height="450" Width="800">
    <Grid>
        <Image Height="{Binding SystemParameters.PrimaryScreenHeight}"  Width="{Binding SystemParameters.PrimaryScreenWidth}"  Stretch="Fill" StretchDirection="Both" Source="/Images/GreenBack.png"/>
        <DockPanel LastChildFill="False" Margin="0,0,0,324">
            <Image DockPanel.Dock="Top" Height="100" Width="117" Source="/Images/SearchBOOKIcon.png"/>
        </DockPanel>
        <TextBox x:Name="TxtName" HorizontalAlignment="Left" Margin="309,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Book Name:" Foreground="White" HorizontalAlignment="Left" Margin="230,133,0,0" VerticalAlignment="Top"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="458,141,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Label Content="Title" Foreground="White" HorizontalAlignment="Left" Margin="36,217,0,0" VerticalAlignment="Top"/>
        <Label Content="Theme" Foreground="White" HorizontalAlignment="Left" Margin="36,271,0,0" VerticalAlignment="Top"/>
        <Label Content="Author" Foreground="White" HorizontalAlignment="Left" Margin="36,325,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtTitle" HorizontalAlignment="Left" Margin="102,225,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtTheme" HorizontalAlignment="Left" Margin="102,279,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtAuthor" HorizontalAlignment="Left" Margin="102,333,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Identifier" Foreground="White" HorizontalAlignment="Left" Margin="460,217,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtIdentifier" HorizontalAlignment="Left" Margin="535,225,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Copies" Foreground="White" HorizontalAlignment="Left" Margin="460,275,0,0" VerticalAlignment="Top"/>
        <Label Content="Price" Foreground="White" HorizontalAlignment="Left" Margin="460,325,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtCopies" HorizontalAlignment="Left" Margin="535,279,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtPrice" HorizontalAlignment="Left" Margin="535,333,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="692,380,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
